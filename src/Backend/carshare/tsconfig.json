{
  "compilerOptions": {
    "target": "es6",                      
    "module": "commonjs",                    
    "allowJs": true,                     
    "declaration": true,                   
    "outDir": "./dist",                        
    "rootDir": "./src",                   
    "strict": true,                      
    "moduleResolution": "node",     
    "typeRoots": [
      "src/@types",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,                 
    "experimentalDecorators": true,    
    "emitDecoratorMetadata": true,      
    "forceConsistentCasingInFileNames": true 
  }
}
